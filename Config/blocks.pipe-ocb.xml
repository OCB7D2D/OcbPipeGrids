<configs>

	<append xpath="/blocks">

		<block name="ocbPipeSmallStraight">
			<property name="Extends" value="pipeSmall1x1" param1="Model,Shape,Mesh"/>
			<property name="Shape" value="Pipe, PipeGrids"/>
			<property name="Model" value="#@modfolder:Resources/PipeDream.unity3d?PipeSmallStraight"/>
			<property name="ModelOffset" value="0.5,0.5,0.5"/>
      <property name="PipeDiameter" value="2"/>
      <property name="HandleFace" value="South"/>
      <property name="EconomicValue" value="60"/>
			<property name="Class" value="PipeConnection, PipeGrids" />
			<property name="PipeConnectors" value="forward,back" />
			<property name="DisplayInfo" value="Custom" />
			<property name="Path" value="solid"/>
			<property name="Texture" value="597"/>
			<property name="DensitySupport" value="true"/>
			<drop event="Destroy" name="ocbPipeSmallVariantHelper" count="1"/>
    </block>

		<block name="ocbPipeSmallFlatT">
			<property name="Extends" value="pipeSmall1x1" param1="Model,Shape,Mesh"/>
			<property name="Shape" value="Pipe, PipeGrids"/>
			<property name="Model" value="#@modfolder:Resources/PipeDream.unity3d?PipeSmallFlatT"/>
			<property name="ModelOffset" value="0.5,0.5,0.5"/>
			<property name="PipeDiameter" value="2"/>
      <property name="HandleFace" value="Bottom"/>
      <property name="EconomicValue" value="60"/>
			<property name="Class" value="PipeConnection, PipeGrids" />
			<property name="PipeConnectors" value="forward,back,down" />
			<property name="DisplayInfo" value="Custom" />
			<property name="Path" value="solid"/>
			<property name="Texture" value="597"/>
			<property name="DensitySupport" value="true"/>
			<drop event="Destroy" name="ocbPipeSmallVariantHelper" count="1"/>
    </block>

		<block name="ocbPipeSmallFlatX">
			<property name="Extends" value="pipeSmall1x1" param1="Model,Shape,Mesh"/>
			<property name="Shape" value="Pipe, PipeGrids"/>
			<property name="Model" value="#@modfolder:Resources/PipeDream.unity3d?PipeSmallFlatX"/>
			<property name="ModelOffset" value="0.5,0.5,0.5"/>
			<property name="PipeDiameter" value="2"/>
			<property name="HandleFace" value="South"/>
			<property name="EconomicValue" value="60"/>
			<property name="Class" value="PipeConnection, PipeGrids" />
			<property name="PipeConnectors" value="left,right,forward,back" />
			<property name="DisplayInfo" value="Custom" />
			<property name="Path" value="solid"/>
			<property name="Texture" value="597"/>
			<property name="DensitySupport" value="true"/>
			<drop event="Destroy" name="ocbPipeSmallVariantHelper" count="1"/>
		</block>

		<block name="ocbPipeSmallCorner">
			<property name="Extends" value="pipeSmall1x1" param1="Model,Shape,Mesh"/>
			<property name="Shape" value="Pipe, PipeGrids"/>
			<property name="Model" value="#@modfolder:Resources/PipeDream.unity3d?PipeSmallCorner"/>
			<property name="ModelOffset" value="0.5,0.5,0.5"/>
			<property name="PipeDiameter" value="2"/>
			<property name="HandleFace" value="South"/>
			<property name="EconomicValue" value="60"/>
			<property name="Class" value="PipeConnection, PipeGrids" />
			<property name="PipeConnectors" value="back,up" />
			<property name="DisplayInfo" value="Custom" />
			<property name="Path" value="solid"/>
			<property name="Texture" value="597"/>
			<property name="DensitySupport" value="true"/>
			<drop event="Destroy" name="ocbPipeSmallVariantHelper" count="1"/>
		</block>

		<block name="ocbPipeSmallVariantHelper">
			<property name="Extends" value="ocbPipeSmallStraight" />
			<property name="ItemTypeIcon" value="all_blocks" />
			<property name="SelectAlternates" value="true" />
			<property name="PlaceAltBlockValue" value="ocbPipeSmallStraight,ocbPipeSmallFlatT,ocbPipeSmallFlatX,ocbPipeSmallCorner" />
			<property name="DescriptionKey" value="ocbPipeSmallVariantHelperDesc" />
    </block>

	</append>

</configs>