<configs patcher-version="1">

	<include path="blocks.pipe.xml"/>
	
	<append xpath="/blocks/block[@name='plantedCorn1']">
		<property name="Class" value="PlantationGrowing, PipeGrids" />
		<property name="DisplayInfo" value="Custom" />
	</append>
	<append xpath="/blocks/block[@name='plantedCorn2']">
		<property name="Class" value="PlantationGrowing, PipeGrids" />
		<property name="DisplayInfo" value="Custom" />
	</append>

	<append xpath="/blocks">

		<block name="ocbWaterPipeSource">
			<property name="CreativeMode" value="Player"/>
			<property name="Tags" value="door"/>
			<property name="Class" value="PipeSource, PipeGrids"/>

			<property name="CustomIcon" value="AutoHarvest"/>
			<property name="Material" value="Msteel"/>
			<property name="StabilitySupport" value="true"/>

			<property name="Shape" value="New"/>
			<property name="Path" value="solid"/>
			<property name="ModelOffset" value=".5,.5,.5"/>
			<property name="Texture" value="597"/>

			<property name="Model" value="#@modfolder:Resources/WaterPipeSource.unity3d?WaterPipeSource" />

			<property name="IsTerrainDecoration" value="false"/>
			<property name="Collide" value="movement,melee,bullet,arrow,rocket"/>
			<property name="Group" value="Basics,Building,advBuilding"/>
			<property name="DescriptionKey" value="ocbWaterPipeSource"/>
			<property name="EconomicValue" value="10"/>
			<property name="EconomicBundleSize" value="10"/>
			<property name="FilterTags" value="floot"/>
			<property name="DisplayType" value="blockHardened"/>

			<property class="RepairItems">
				<property name="resourceForgedSteel" value="40"/>
				<property name="resourceElectricParts" value="40"/>
				<property name="resourceMechanicalParts" value="10"/>
			</property>

			<drop event="Destroy" name="resourceForgedSteel" count="5,10"/>
			<drop event="Destroy" name="resourceElectricParts" count="5,20" tag="salvageHarvest"/>
			<drop event="Destroy" name="resourceMechanicalParts" count="5,10" tag="salvageHarvest"/>
			<drop event="Fall" name="scrapMetalPile" count="1" prob="0.75" stick_chance="1"/>

			<property name="CanPickup" value="true" />
			<property name="TakeDelay" value="30"/>
			<property name="RequiredPower" value="25"/>
			<property name="PipeConnectors" value="up" />

			<property name="DisplayInfo" value="Custom" />
			<property name="WaterBlockRange" value="1,1,2" />
			<property name="AirBlockRange" value="1,1,1" />
			<property name="MinWaterBlocks" value="12" />
			<property name="MinAirBlocks" value="6" />

			<property name="MaxFillState" value="500"/>

		</block>


		<block name="ocbWaterPipePump">
			<property name="CreativeMode" value="Player"/>
			<property name="Tags" value="door"/>
			<property name="Collide" value="movement,melee,bullet,arrow,rocket"/>
			<property name="Material" value="Msteel"/>
			<property name="StabilitySupport" value="true"/>
			<property name="IsTerrainDecoration" value="false"/>
			<property name="Group" value="Basics,Building,advBuilding"/>
			<property name="EconomicValue" value="10"/>
			<property name="EconomicBundleSize" value="10"/>
			<property name="FilterTags" value="floot"/>
			<property name="DisplayType" value="blockHardened"/>
			<property name="CustomIcon" value="AutoHarvest"/>
			<property name="DescriptionKey" value="ocbWaterPipeSource"/>

			<property name="Shape" value="New"/>
			<property name="Class" value="PipePump, PipeGrids"/>

			<property name="Model" value="#@modfolder:Resources/WaterPipePump.unity3d?WaterPipePump" />

			<property name="ModelOffset" value=".5,.5,.5"/>
			<property name="Path" value="solid"/>
			<property name="Texture" value="597"/>
			<property name="MaxFillState" value="200"/>



			<property name="RequiredPower" value="8"/>
			<property name="AutoHarvestSpeed" value="4"/>
			<property name="LookupsPerTick" value="2000"/>

			<property name="WaterPipePump" value="true"/>
			<property name="DisplayInfo" value="Custom" />

			<property name="PipeMaxConnection" value="2" />
			<property name="PipeConnectors" value="forward,back" />

			<property name="Path" value="solid"/>
			<property name="Texture" value="597"/>
			<property name="LootList" value="storageCrate"/>
			<property name="LPHardnessScale" value="8"/>
		</block>

		<block name="ocbWaterPipeIrrigation">

			<property name="Class" value="PipeIrrigation, PipeGrids"/>

			<property name="CreativeMode" value="Player"/>
			<property name="Tags" value="door"/>
			<property name="CustomIcon" value="AutoHarvest"/>
			<property name="Material" value="Msteel"/>
			<property name="StabilitySupport" value="true"/>
			<!--
			<property name="Shape" value="ModelEntity" />
			<property name="Model" value="#@modfolder:Resources/AutoHarvest.unity3d?WaterPipeWellHead1Prefab" />
				-->
			<property name="DisplayType" value="blockMulti"/>
			<property name="MultiBlockDim" value="3,1,3"/>
			<property name="ModelOffset" value=".5,.5,.5"/>

			<property name="AllowAllRotations" value="false"/>

			<property name="Shape" value="New"/>
			<property name="LightOpacity" value="4"/>
			<property name="Path" value="solid"/>
			<property name="Texture" value="597"/>
			<property name="ImposterDontBlock" value="true"/>

			<property name="Shape" value="New"/>
			<property name="LightOpacity" value="4"/>
			<property name="Path" value="solid"/>
			<property name="Model" value="pipe_straight"/>
			<property name="Texture" value="597"/>
			<property name="ImposterDontBlock" value="true"/>

			<property name="Shape" value="New"/>
			<property name="Model" value="#@modfolder:Resources/WaterPipeIrrigation.unity3d?WaterIrrigationPrefab"/>

			<property name="IsTerrainDecoration" value="false"/>
			<property name="Collide" value="movement,melee,bullet,arrow,rocket"/>
			<property name="Group" value="Basics,Building,advBuilding"/>
			<property name="DescriptionKey" value="ocbWaterPipeSource"/>
			<property name="EconomicValue" value="10"/>
			<property name="EconomicBundleSize" value="10"/>
			<property name="FilterTags" value="floot"/>
			<property name="DisplayType" value="blockHardened"/>

			<property class="RepairItems">
				<property name="resourceForgedSteel" value="40"/>
				<property name="resourceElectricParts" value="40"/>
				<property name="resourceMechanicalParts" value="10"/>
			</property>

			<drop event="Destroy" name="resourceForgedSteel" count="5,10"/>
			<drop event="Destroy" name="resourceElectricParts" count="5,20" tag="salvageHarvest"/>
			<drop event="Destroy" name="resourceMechanicalParts" count="5,10" tag="salvageHarvest"/>
			<drop event="Fall" name="scrapMetalPile" count="1" prob="0.75" stick_chance="1"/>

			<!--<property name="CanPickup" value="true" />
			<property name="TakeDelay" value="30"/>-->
			<property name="RequiredPower" value="20"/>
			<property name="AutoHarvestSpeed" value="4"/>
			<property name="LookupsPerTick" value="2000"/>

			<property name="WaterPipeOut" value="true"/>
			<property name="DisplayInfo" value="Custom" />

			<property name="PipeConnectors" value="up" />
			<property name="PipeMaxConnection" value="1" />

			<property name="MaxFillState" value="300"/>

			<property name="Shape" value="New"/>
			<property name="LightOpacity" value="4"/>
			<property name="Path" value="solid"/>
			<property name="Texture" value="597"/>
			<property name="ImposterDontBlock" value="true"/>
		</block>



		<block name="ocbWaterPipeWell">
			<property name="CreativeMode" value="Player"/>
			<property name="Tags" value="door"/>
			<property name="Class" value="PipeWell, PipeGrids"/>
			<property name="CustomIcon" value="AutoHarvest"/>
			<property name="Material" value="Msteel"/>
			<property name="StabilitySupport" value="false"/>
			<property name="Shape" value="ModelEntity" />
			<property name="Model" value="#@modfolder:Resources/WaterPipeWell.unity3d?WaterGridWellPrefab" />
			<property name="IsTerrainDecoration" value="false"/>
			<property name="Collide" value="movement,melee,bullet,arrow,rocket"/>
			<property name="Group" value="Basics,Building,advBuilding"/>
			<property name="DescriptionKey" value="ocbWaterPipeSource"/>
			<property name="EconomicValue" value="10"/>
			<property name="EconomicBundleSize" value="10"/>
			<property name="FilterTags" value="floot"/>
			<property name="DisplayType" value="blockHardened"/>

			<property name="ActivationDistance" value="12" />
			<property name="CanPickup" value="true" />

			<property name="FromGround" value="0.08" />
			<property name="FromFreeSky" value="0.25" />
			<property name="FromWetSurface" value="0.15" />
			<property name="FromSnowfall" value="0.4" />
			<property name="FromRainfall" value="0.8" />
			<property name="FromIrrigation" value="5" />
			<property name="BlockReach" value="2" />

			<property class="RepairItems">
				<property name="resourceForgedSteel" value="40"/>
				<property name="resourceElectricParts" value="40"/>
				<property name="resourceMechanicalParts" value="10"/>
			</property>

			<drop event="Destroy" name="resourceForgedSteel" count="5,10"/>
			<drop event="Destroy" name="resourceElectricParts" count="5,20" tag="salvageHarvest"/>
			<drop event="Destroy" name="resourceMechanicalParts" count="5,10" tag="salvageHarvest"/>
			<drop event="Fall" name="scrapMetalPile" count="1" prob="0.75" stick_chance="1"/>

			<!--<property name="CanPickup" value="true" />
			<property name="TakeDelay" value="30"/>-->
			<property name="RequiredPower" value="20"/>
			<property name="AutoHarvestSpeed" value="4"/>
			<property name="LookupsPerTick" value="2000"/>

			<property name="WaterPipeOut" value="true"/>
			<property name="DisplayInfo" value="Custom" />

			<property name="DisplayType" value="blockMulti"/>
			<property name="MultiBlockDim" value="3,3,3"/>

		</block>
	</append>

</configs>
