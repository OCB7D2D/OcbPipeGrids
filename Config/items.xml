<configs>


  <append xpath="/items">


    <item name="drinkJarEmpty">
      <property name="HoldType" value="3"/>
      <property name="Meshfile" value="#Other/Items?Food/emptyJarPrefab.prefab"/>
      <property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>
      <property name="Material" value="Mglass"/>
      <property name="Stacknumber" value="125"/>
      <!-- STK resource -->
      <property name="Weight" value="10"/>
      <property name="EconomicValue" value="6"/>
      <property name="CraftingIngredientTime" value="9"/>
      <property class="Action1">
        <!-- UseAction -->
        <property name="Class" value="ExchangeItem"/>
        <property name="Delay" value="1.0"/>
        <property name="Change_item_to" value="drinkJarRiverWater"/>
        <property name="Do_block_action" value="deplete1"/>
        <property name="Focused_blockname_1" value="water"/>
        <property name="Focused_blockname_2" value="waterMoving"/>
        <property name="Focused_blockname_3" value="waterStaticBucket"/>
        <property name="Focused_blockname_4" value="waterMovingBucket"/>
        <property name="Focused_blockname_5" value="terrWaterPOI"/>
        <property name="Sound_start" value="bucketfill_water"/>
      </property>
      <property name="Group" value="Resources"/>
    </item>
    
  </append>
  
  <setattribute xpath="/items/item[@name='bucketRiverWater']/property[@class='Action1']" name="class">Action0</setattribute>

	<append xpath="/items/item[@name='bucketRiverWater']">
		<property class="Action1">
			<property name="Class" value="ExchangeItem"/>
			<property name="Delay" value=".35"/>
			<property name="Change_item_to" value="bucketEmpty"/>
			<property name="Do_block_action" value="fill3"/>
			<property name="Focused_blockname_1" value="OcbWaterFarmWell"/>
			<property name="Sound_start" value="bucketbail_water"/>
		</property>
	</append>

	<append xpath="/items/item[@name='drinkJarRiverWater']">
		<property class="Action1">
			<property name="Class" value="ExchangeItem"/>
			<property name="Delay" value="1.0"/>
			<property name="Change_item_to" value="drinkJarEmpty"/>
			<property name="Do_block_action" value="fill1"/>
			<property name="Focused_blockname_1" value="OcbWaterFarmWell"/>
			<property name="Sound_start" value="bucketplace_water"/>
		</property>
	</append>

	<append xpath="/items/item[@name='drinkJarEmpty']/property[@class='Action1']">
		<property name="Focused_blockname_6" value="OcbWaterFarmWell"/>
	</append>

	<append xpath="/items/item[@name='bucketEmpty']/property[@class='Action1']">
		<property name="Focused_blockname_6" value="OcbWaterFarmWell"/>
	</append>

	<append xpath="/items">
		<item name="resourceCompost">
			<property name="HoldType" value="45"/>
			<property name="Tags" value="junk"/>
			<property name="UnlockedBy" value="perkLivingOffTheLand"/>
			<property name="Meshfile" value="#Other/Items?Misc/sackPrefab.prefab"/>
			<property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>
			<property name="CustomIcon" value="resourceFertilizer"/>
			<property name="Material" value="MresourceFertilizer"/>
			<property name="Stacknumber" value="500"/>
			<property name="Weight" value="0"/>
			<property name="Group" value="Resources"/>
			<property name="EconomicValue" value="30"/>
      <property class="Action0">
        <property name="Class" value="ExchangeInteraction, PipeGrids"/>
        <property name="Delay" value="2.5"/>
        <property name="Sound_start" value="bucketplace_water"/>
        <property name="Create_item" value="drinkJarEmpty"/>
      </property>
    </item>

		<item name="resourcePesticide">
			<property name="HoldType" value="34"/>
			<property name="Tags" value="junk"/>
			<property name="UnlockedBy" value="perkLivingOffTheLand"/>
			<property name="Meshfile" value="#Other/Items?Food/bottled_waterPrefab.prefab"/>
			<property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>
			<property name="CustomIcon" value="drinkJarRiverWater"/>
			<property name="CustomIconTint" value="128,255,255" />
			<property name="Material" value="Mglass"/>
			<property name="Stacknumber" value="50"/>
			<property name="Weight" value="0"/>
			<property name="Group" value="Resources"/>
			<property name="EconomicValue" value="30"/>
			<property class="Action0">
				<property name="Class" value="ExchangeInteraction, PipeGrids"/>
				<property name="Delay" value="2.5"/>
				<property name="Sound_start" value="bucketplace_water"/>
				<property name="Create_item" value="drinkJarEmpty"/>
			</property>
		</item>
	
	</append>

</configs>
