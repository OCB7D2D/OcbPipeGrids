<configs>

    <append xpath="/blocks">

      <block name="OcbTowerTankConnector">
        <property name="CreativeMode" value="None" />
        <property name="Class" value="Reservoir, PipeGrids" />
        <!-- We could make specific connectors for corner and side -->
        <!-- But we also need to interconnect between each other -->
        <!-- Using four will create a circular grid, which is OK -->
        <property name="PipeConnectors" value="forward,left,back,right" />
        <property name="PipeDiameter" value="0,1,2,3,4,5,6,7"/>
        <property name="BreakSegment" value="true" />
        <property name="Material" value="Msteel" />
      </block>

      <block name="OcbTowerTank">

        <property name="Class" value="Tank, PipeGrids"/>

        <connection-nodes>
          <!-- Rotation is setup so forward connector is exposed on side -->
          <connection name="OcbTowerTankConnector" position="0,0,1" rotation="0"/>
          <connection name="OcbTowerTankConnector" position="-1,0,1" rotation="0"/>
          <connection name="OcbTowerTankConnector" position="1,0,0" rotation="1"/>
          <connection name="OcbTowerTankConnector" position="1,0,-1" rotation="1"/>
          <connection name="OcbTowerTankConnector" position="0,0,-2" rotation="2"/>
          <connection name="OcbTowerTankConnector" position="-1,0,-2" rotation="2"/>
          <connection name="OcbTowerTankConnector" position="-2,0,0" rotation="3"/>
          <connection name="OcbTowerTankConnector" position="-2,0,-1" rotation="3"/>
          <!-- Rotation is correctly setup so forward and left connector is exposed -->
          <connection name="OcbTowerTankConnector" position="-2,0,1" rotation="0"/>
          <connection name="OcbTowerTankConnector" position="1,0,1" rotation="1"/>
          <connection name="OcbTowerTankConnector" position="1,0,-2" rotation="2"/>
          <connection name="OcbTowerTankConnector" position="-2,0,-2" rotation="3"/>
        </connection-nodes>

        <property name="IsPowered" value="True" />
        <property name="MaxFillState" value="750" />
        <property name="DisplayInfo" value="Custom" />

        <property name="CreativeMode" value="Player"/>
        <property name="Tags" value="safes,hardenedSafe"/>
        <property name="Material" value="Msteel"/>
        <property name="StabilitySupport" value="true"/>
        <property name="Shape" value="ModelEntity" />
        <property name="Model" value="#@modfolder:Resources/PipeGrid.unity3d?WaterTowerPrefab" />
        <property name="IsTerrainDecoration" value="false"/>
        <property name="Collide" value="movement,melee,bullet,arrow,rocket"/>
        <property name="LootList" value="storageCrate"/>
        <property name="LPHardnessScale" value="8"/>
        <property name="Group" value="Storage,Building,advBuilding,Blocks,Player"/>
        <property name="DescriptionKey" value="ocbBlockClaimAutoRepairDesc"/>
        <property name="EconomicValue" value="200"/>
        <property name="EconomicBundleSize" value="5"/>
        <property name="Stacknumber" value="25"/>
        <property name="FilterTags" value="floot"/>
        <property name="DisplayType" value="blockHardened"/>

        <property name="CanPickup" value="true" />
        <property name="TakeDelay" value="30"/>

        <property name="DisplayType" value="blockMulti"/>
        <property name="MultiBlockDim" value="4,10,4"/>
        <property name="ModelOffset" value="0,0.5,0"/>

        <property name="UnlockedBy" value="perkAdvancedEngineering"/>

        <property class="RepairItems">
          <property name="resourceForgedSteel" value="40"/>
          <property name="resourceElectricParts" value="40"/>
          <property name="resourceMechanicalParts" value="10"/>
        </property>

        <drop event="Destroy" name="resourceForgedSteel" count="5,10"/>
        <drop event="Destroy" name="resourceElectricParts" count="5,20" tag="salvageHarvest"/>
        <drop event="Destroy" name="resourceMechanicalParts" count="5,10" tag="salvageHarvest"/>
        <drop event="Fall" name="scrapMetalPile" count="1" prob="0.75" stick_chance="1"/>

      </block>

    </append>

</configs>