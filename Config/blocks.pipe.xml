<configs>

	<append xpath="/blocks/block[starts-with(@name, 'metalPipe')]">
		<property name="Class" value="PipeConnection, PipeGrids" />
		<property name="DisplayInfo" value="Custom" />
		<property name="PipeDiameter" value="4"/>
	</append>

	<append xpath="/blocks/block[@name='metalPipeStraight']">
		<property name="PipeConnectors" value="forward,back" />
		<!-- <property name="IsSolidCube" value="true" /> -->
		<property name="PipeDiameter" value="4"/>
	</append>

	<append xpath="/blocks/block[@name='metalPipeCorner']">
		<property name="PipeConnectors" value="forward,right" />
		<property name="PipeDiameter" value="4"/>
	</append>

	<append xpath="/blocks/block[@name='metalPipeJoint']">
		<property name="PipeConnectors" value="forward,left,back" />
		<property name="PipeDiameter" value="4"/>
	</append>

	<append xpath="/blocks/block[@name='metalPipeFlange']">
		<property name="PipeConnectors" value="back" />
		<property name="PipeDiameter" value="4"/>
	</append>

	<append xpath="/blocks/block[@name='metalPipeValve']">
		<property name="PipeConnectors" value="down" />
		<property name="PipeDiameter" value="4"/>
	</append>

	<append xpath="/blocks/block[@name='metalPipeCap']">
		<property name="PipeConnectors" value="down" />
		<property name="PipeDiameter" value="4"/>
	</append>

	<!-- Small pipes center variants -->

	<append xpath="/blocks/block[@name='pipeSmallJoint']">
		<property name="Class" value="PipeConnection, PipeGrids" />
		<property name="PipeConnectors" value="forward,left,back" />
		<property name="DisplayInfo" value="Custom" />
		<property name="PipeDiameter" value="1"/>
	</append>

	<append xpath="/blocks/block[@name='pipeSmall1x1']">
		<property name="Class" value="PipeConnection, PipeGrids" />
		<property name="PipeConnectors" value="forward,back" />
		<property name="DisplayInfo" value="Custom" />
		<property name="PipeDiameter" value="1"/>
	</append>
	<append xpath="/blocks/block[@name='pipeSmall1x1']">
		<property name="MultiBlockPipe" value="true"/>
		<property name="PipeDiameter" value="1"/>
	</append>

	<append xpath="/blocks/block[@name='pipeSmallCorner']">
		<property name="Class" value="PipeConnection, PipeGrids" />
		<property name="PipeConnectors" value="forward,right" />
		<property name="DisplayInfo" value="Custom" />
		<property name="PipeDiameter" value="1"/>
	</append>

	<append xpath="/blocks/block[@name='pipeSmallValve']">
		<property name="Class" value="PipeConnection, PipeGrids" />
		<property name="PipeConnectors" value="down" />
		<property name="DisplayInfo" value="Custom" />
		<property name="PipeDiameter" value="1"/>
	</append>

	<append xpath="/blocks/block[@name='pipeSmallCap']">
		<property name="Class" value="PipeConnection, PipeGrids" />
		<property name="PipeConnectors" value="down" />
		<property name="PipeDiameter" value="1"/>
	</append>

	<!-- Small pipes wall variants -->

	<append xpath="/blocks/block[@name='pipeSmallWallJoint']">
		<property name="Class" value="PipeConnection, PipeGrids" />
		<property name="PipeConnectors" value="forward,left,back" />
		<property name="DisplayInfo" value="Custom" />
		<property name="PipeDiameter" value="1"/>
	</append>

	<append xpath="/blocks/block[@name='pipeSmallWall1x1']">
		<property name="Class" value="PipeConnection, PipeGrids" />
		<property name="PipeConnectors" value="forward:1,back:3" />
		<property name="DisplayInfo" value="Custom" />
		<property name="PipeDiameter" value="1"/>
	</append>

	<append xpath="/blocks/block[@name='pipeSmallWallCorner']">
		<property name="Class" value="PipeConnection, PipeGrids" />
		<property name="PipeConnectors" value="forward:1,right:1" />
		<property name="DisplayInfo" value="Custom" />
		<property name="PipeDiameter" value="1"/>
	</append>

	<append xpath="/blocks/block[@name='pipeSmallWallValve']">
		<property name="Class" value="PipeConnection, PipeGrids" />
		<property name="PipeConnectors" value="down" />
		<property name="DisplayInfo" value="Custom" />
		<property name="PipeDiameter" value="1"/>
	</append>

	<append xpath="/blocks/block[@name='pipeSmallWallCap']">
		<property name="Class" value="PipeConnection, PipeGrids" />
		<property name="PipeConnectors" value="down" />
		<property name="DisplayInfo" value="Custom" />
		<property name="PipeDiameter" value="1"/>
	</append>

	<append xpath="/blocks">




		<block name="pipeSmallWallCornerEdge">
			<property name="Extends" value="pipeSmall1x1" param1="Model,Shape,Mesh"/>
			<property name="Shape" value="New"/>
			<property name="Model" value="#@modfolder:Resources/WallPipeCornerSmall.unity3d?WallPipeCornerSmall"/>
			<property name="HandleFace" value="North"/>
			<property name="EconomicValue" value="60"/>
			<property name="Class" value="PipeConnection, PipeGrids" />
			<property name="PipeConnectors" value="forward:3,up:1" />
			<property name="DisplayInfo" value="Custom" />

			<property name="Path" value="solid"/>
			<property name="Texture" value="597"/>
			<!--
			<property name="LootList" value="storageCrate"/>
			<property name="LPHardnessScale" value="8"/>
			-->
			
			<!-- disassemble value -->
		</block>

	</append>

	<!-- 
		  pipeSmallJoint,
		  pipeSmall1x1,
		pipeSmall1x3,
		pipeSmallBroke,
		  pipeSmallCap,
		  pipeSmallCorner,
		pipeSmallValve,
		  pipeSmallWall1x1,
		pipeSmallWall1x3,
		pipeSmallWallBroke,
		  pipeSmallWallCap,
		pipeSmallWallCenterBridge,
		  pipeSmallWallCorner,
		  pipeSmallWallJoint,
		  pipeSmallWallValve
	-->

	<append xpath="/blocks/block[starts-with(@name, 'ductStraight')]">
		<property name="Class" value="PipeConnection, PipeGrids" />
		<property name="DisplayInfo" value="Custom" />
	</append>
	<append xpath="/blocks/block[starts-with(@name, 'ductCorner')]">
		<property name="Class" value="PipeConnection, PipeGrids" />
		<property name="OnlySimpleRotations" value="true"/>
		<property name="DisplayInfo" value="Custom" />
	</append>

</configs>